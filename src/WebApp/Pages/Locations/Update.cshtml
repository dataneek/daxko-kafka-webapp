@page "{id:guid}"
@model UpdateModel

@{
    ViewData["Title"] = "Edit Locations";
}


<h1>Edit Location</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All"></div>
            <input asp-for="Input.Id" type="hidden" />

            <div class="form-group">
                <label asp-for="Input.LocationName"></label>
                <div>
                    <input class="form-control" asp-for="Input.LocationName" />
                    <span asp-validation-for="Input.LocationName"></span>
                </div>
            </div>
        
            <div>
                <a class="btn btn-default" asp-page="/Locations/Index">Back</a>
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>